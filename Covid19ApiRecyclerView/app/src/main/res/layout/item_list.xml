<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/createDt_listitem"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/gubun_item"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:padding="2dp"
        android:textAlignment="center"
        android:text="YYYY-MM-DD"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:maxLength="10"/>
    <TextView
        android:id="@+id/gubun_item"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/createDt_listitem"
        app:layout_constraintRight_toLeftOf="@id/defCnt_item"
        android:padding="2dp"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:text="gubun"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/defCnt_item"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/gubun_item"
        android:padding="2dp"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:text="defCnt"
        android:textStyle="bold"
        android:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>